SELECT SYSESP
DEFI WIND BRESP FROM LIBRESP,CIBRESP TO LIBRESP+10,CIBRESP+40 ;
                TITLE " ESPECIALIDADES " ;
                FOOTER " F1=Inc,F2=Mod,F3=Eli,F4=Bus,F6=Lis,ESC=Sel ";
                DOUBLE NOFLOAT NOZOOM NOGROW SHADOW COLOR SCHEME 10
