SELECT COMPRO
SET ORDER TO BCBENEF2
GO TOP
STORE .T. TO R0201
DO WHILE R0201
   GO TOP
   @ 06,1 CLEAR TO 21,78
   @ 07,22 SAY "LISTA DETALLADA DE PROVEEDORES"
   @ 08,1 TO 8,78
   STORE SPACE(2)     TO WGRUPO
   STORE SPACE(10)    TO WWDESDE
   STORE "ZZZZZZZZZZ" TO WWHASTA
   STORE SPACE(10)    TO WDESDE
   STORE SPACE(10)    TO WHASTA
   @ 10,5 SAY    "GRUPO        :"
   @ 11,5 SAY    "DESDE        :"
   @ 12,5 SAY    "HASTA        :"
   @ 14,5 SAY    "* SALIDA *"
   @ 15,5 say    "MONITOR ...1"
   @ 16,5 say    "IMPRESORA..2"
   @ 17,5 say    "          [ ]"
   store 1 to wsalida
   STORE "OPRIMA <ESC> PARA SALIR" TO MES
   DO MENSAJE WITH MES
   @ 10,20 GET WGRUPO
   READ
   IF READKEY() = 12 .OR READKEY() = 268
      RETURN
   ENDIF
   @ 11,20 GET WDESDE
   READ
   IF READKEY() = 12 .OR READKEY() = 268
      RETURN
   ENDIF
   @ 12,20 GET WHASTA
   READ
   IF READKEY() = 12 .OR READKEY() = 268
      RETURN
   ENDIF
   IF WDESDE = SPACE(10)
      STORE WWDESDE TO WDESDE
      STORE "PRIMERO" TO WMES1
      @ 11,20 SAY WMES1
   ENDIF
   IF WHASTA = SPACE(10)
      STORE WWHASTA TO WHASTA
      STORE "ULTIMO" TO WMES2
      @ 12,20 SAY WMES2
   ENDIF
   IF WHASTA < WDESDE
      STORE "VERIFIQUE INTERVALO. (Ù)" TO MES
      DO AVISO WITH MES
      LOOP
   ENDIF
   @ 17,16 get wsalida picture "#" range 1,2
   read
   SAVE SCRE TO INF1
   STORE "CONTINUAR ? (S/N)" TO TEX
   STORE "SN" TO WCH
   DO PREGUNTA
   IF WCH = "N"
      RETURN
   ENDIF

   STORE 0 TO PAGINA
   STORE 100 TO LINE
   IF WSALIDA = 1
      STORE 22 TO WSALTO
      @ 0,0 CLEAR
   ELSE
      SET DEVI TO PRINT
      STORE 55 TO WSALTO
   ENDIF

   LOCATE FOR SUBSTR(DESCRI,1,LEN(ALLTRIM(WDESDE))) >= ALLTRIM(WDESDE)
   DO WHILE .NOT. EOF() .AND.; 
      SUBSTR(DESCRI,1,LEN(ALLTRIM(WDESDE))) <= ALLTRIM(WHASTA)
      IF WGRUPO<>SPACE(2).AND.WGRUPO<>GRUPO
         SELECT COMPRO
         SKIP
         LOOP
      ENDIF
      STORE LINE+1 TO LINE
      IF LINE >= WSALTO
         STORE PAGINA + 1 TO PAGINA
         IF WSALIDA=1 .AND. PAGINA<>1
            STORE "CONTINUAR ? (S/N)" TO TEX
            STORE "SN" TO WCH
            DO PREGUNTA
            IF WCH = "N"
               RETURN
            ENDIF
            @ 0,0 CLEAR
         ENDIF
         
         @ 1,0   SAY QQWW
         @ 1,60  SAY "FECHA :"+DTOC(DATE())
         @ 2,0   SAY "LISTA DETALLADA DE PROVEEDORES"
         @ 2,60  SAY "PAGINA:"+STR(PAGINA,2)
         @ 04,0  SAY "GRUPO"
         @ 04,8 SAY "CODIGO"
         @ 04,22 SAY "NOMBRE DE LA EMPRESA"
         @ 04,54 SAY "TELFONOS"
         @ 5,0   SAY REPLICATE("-",80)
         STORE 6 TO LINE
      ENDIF
      @ LINE,0  SAY GRUPO
      @ LINE,8  SAY CODIGO
      @ LINE,22 SAY DESCRI
      @ LINE,54 SAY TELBEN1
      @ LINE,66 SAY TELBEN2
      SKIP
   ENDDO
   IF WSALIDA = 2
      SET DEVI TO SCRE
      EJECT
   ELSE
      STORE "OPRIMA (Ù) PARA FINALIZAR" TO MES
      DO AVISO WITH MES
      RESTORE SCRE FROM INF1
   ENDIF
ENDDO
SET ORDER TO BCBENEF1
RETURN
