PROCEDURE BRINC
STORE .T. TO WINC
DEFI WIND WINC FROM LIBRGEO+5,CIBRGEO+10 TO LIBRGEO+12,CIBRGEO+56;
               TITLE " INCLUIR " DOUBLE NOFLOAT NOZOOM NOGROW SHADOW COLOR SCHEME 10
ACTI WIND WINC
DO WHILE WINC
   SCAT MEMV BLANK
   @ 00,00 CLEAR
   @ 00,01 SAY "ESTADO     :"
   @ 01,01 SAY "CIUDAD     :"
   @ 02,01 SAY "PARROQUIA  :"
   @ 03,01 SAY "DESCRIPCION:"
   @ 00,14 GET M.ESTADO
   @ 01,14 GET M.CIUDAD
   @ 02,14 GET M.MUNICIPIO
   READ
   IF LASTKEY()=27
      RELEASE WIND WINC
      EXIT
   ENDIF
   STORE M.ESTADO+M.CIUDAD+M.MUNICIPIO TO WCLAVEGEO
   IF LEN(TRIM(WCLAVEGEO))=0
      LOOP
   ENDIF
   SEEK WCLAVEGEO
   IF FOUND()
      @ 03,14 SAY DESCRI
      STORE "YA EXISTE, VERIFIQUE" TO WTEXT
      DO AVISO WITH WTEXT
      LOOP
   ELSE
      @ 03,14 GET M.DESCRI
      READ
      *** INICIO RUTINA DE ACEPTAR-CANCELAR
      store 1 to wop
      do while .t.
         @ 05,13  get wop pict "@*H Aceptar;Cancelar" defa wop
         read
         if lastkey()=13
            exit
         endif
      enddo
      *** FIN  RUTINA ACEPTAR-CANCELAR
      if wop=1
         if filloc()
            append blank
            gath memvar
            unlock all
         endif
      endif
   ENDIF
ENDDO
RETURN
