SELECT AFIGEO
DEFI WIND BRGEO FROM LIBRGEO,CIBRGEO TO LIBRGEO+10,CIBRGEO+56 ;
                TITLE " LOCALIDAD GEOGRAFICA " ;
                FOOTER " F1=Inc, F2=Mod, F3=Eli, F4=Bus, ESC=Sel ";
                DOUBLE NOFLOAT NOZOOM NOGROW SHADOW COLOR SCHEME 10
ACTI WIND BRGEO
ON KEY LABEL F1 DO BRINC
ON KEY LABEL F2 DO BRMOD
ON KEY LABEL F3 DO BRELI
ON KEY LABEL F4 DO BRBUS
BROWSE FIELDS ESTADO:H="ESTADO", CIUDAD:H="CIUDAD", MUNICIPIO:H="PARROQUIA",DESCRI:H="DESCRIPCION";
              NOAPPEND NODELETE NOEDIT NOMENU NOOPTIMIZE REST SAVE IN WINDOW BRGEO
ON KEY LABEL F1
ON KEY LABEL F2
ON KEY LABEL F3
ON KEY LABEL F4
RELEASE WIND BRGEO
RETURN
