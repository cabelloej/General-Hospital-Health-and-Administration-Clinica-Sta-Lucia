PROCEDURE BRINC
STORE .T. TO WINC
DEFI WIND WINC FROM LIBRPAR+5,CIBRPAR+06 TO LIBRPAR+09,CIBRPAR+49;
               TITLE " INCLUIR PARENTESCO " DOUBLE NOFLOAT NOZOOM NOGROW SHADOW COLOR SCHEME 10
ACTI WIND WINC
DO WHILE WINC
   SCAT MEMV BLANK
   @ 00,00 CLEAR
   @ 00,01 SAY "PARENTESCO:       DESCRIPCION:"
   @ 00,12 GET M.PARENTESCO
   READ
   IF LASTKEY()=27
      RELEASE WIND WINC
      EXIT
   ENDIF
   STORE M.PARENTESCO TO WCLAVEPAR
   IF LEN(TRIM(WCLAVEPAR))=0
      LOOP
   ENDIF
   SEEK WCLAVEPAR
   IF FOUND()
      @ 00,32 SAY DESCRI
      STORE "PARENTESCO YA EXISTE, VERIFIQUE" TO WTEXT
      DO AVISO WITH WTEXT
      LOOP
   ELSE
      @ 00,32 GET M.DESCRI
      READ
      *** INICIO RUTINA DE ACEPTAR-CANCELAR
      store 1 to wop
      do while .t.
         @ 02,13  get wop pict "@*H Aceptar;Cancelar" defa wop
         read
         if lastkey()=13
            exit
         endif
      enddo
      *** FIN  RUTINA ACEPTAR-CANCELAR
      if wop=1
         if filloc()
            append blank
            gath memvar
            unlock all
         endif
      endif
   ENDIF
ENDDO
RETURN
