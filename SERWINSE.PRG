PUSH KEY CLEAR
SELECT SYSSERVI
DEFI WIND BRSER FROM LIBRSER,CIBRSER TO LIBRSER+15,CIBRSER+75;
                TITLE " SERVICIOS ";
                FOOTER " F4=Buscar Codigos, F8=Buscar Tip-Esp, ESC=Seleccionar ";
                DOUBLE NOFLOAT NOZOOM NOGROW SHADOW COLOR SCHEME 10
ACTI WIND BRSER
ON KEY LABEL F4 DO BRBUSCOD
ON KEY LABEL F8 DO BRBUSTIT
BROWSE FIELDS SERVICIO:H="TP-ES-GR-REN", DESCRI:H="DESCRIPCION", PRECIOA:H="PRECIO A", PRECIOB:H="PRECIO B"; 
       NOAPPEND NODELETE NOEDIT NOMENU NOOPTIMIZE REST SAVE IN WINDOW BRSER
RELEASE WIND BRSER
POP KEY
RETURN
*************
PROC BRBUSCOD
*************
PUSH KEY CLEAR
STORE SPACE(12) TO WCS
DEFI WIND BRX FROM LIBRSER+16,CIBRSER TO LIBRSER+18,CIBRSER+30;
              TITLE " BUSCAR ";
              DOUBLE NOFLOAT NOZOOM NOGROW SHADOW COLOR SCHEME 10
ACTI WIND BRX
@ 0,1 GET WCS PICTURE "##-##-##-###"
READ
SEEK WCS
RELE WIND BRX
POP KEY
RETURN
*************
PROC BRBUSTIT
*************
PUSH KEY CLEAR
DEFI WIND BRBE FROM LIBRSER+2,CIBRSER+15 TO LIBRSER+15,CIBRSER+65;
                TITLE " TIPOS y ESPECIALIDADES ";
                FOOTER " ESC=Seleccionar ";
                DOUBLE NOFLOAT NOZOOM NOGROW SHADOW COLOR SCHEME 10
ACTI WIND BRBE
BROWSE FIELDS SERVICIO:H="TP-ES-  -   ",DESCRI:H="DESCRIPCION";
              NOAPPEND NODELETE NOEDIT NOMENU NOOPTIMIZE REST SAVE IN WINDOW BRBE;
              FOR SUBSTR(SERVICIO,6,7)="-  -   "
RELE WIND BRBE
POP KEY
BROWSE FIELDS SERVICIO:H="TP-ES-GR-REN", DESCRI:H="DESCRIPCION",PRECIOA:H="PRECIO A";
              NOAPPEND NODELETE NOEDIT NOMENU NOOPTIMIZE REST SAVE IN WINDOW BRSER
KEYB CHR(13)
RETURN

