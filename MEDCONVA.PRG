   PROC PROCVOC
   ************
   DEAC WIND WINDVAC
   SET ORDER TO ALMART
   ACTI WIND WINDVAC
   RETURN
   ************
   PROC PROCVOA
   ************
   DEAC WIND WINDVAC
   SET ORDER TO ALMART3
   ACTI WIND WINDVAC 
   RETURN
   ************
   PROC PROCVOT
   ************
   DEAC WIND WINDVAC
   SET ORDER TO ALMART4
   ACTI WIND WINDVAC
   RETURN
   *****************
   FUNCTION INDICAVA
   *****************
   ACTI WIND WINDVACIN
   @ 0,0 SAY "Nombre Generic: "+NOMBREGEN
   @ 1,0 SAY "Laboratorio   : "+LABORATOR
   @ 2,0 SAY "Concentracion : "+CONCENTRA
   @ 3,0 SAY "Contenido     : "+CONTENIDO
   @ 4,0 SAY "Presentacion  : "+PRESENTAC
   @ 5,0 SAY "Indicaciones  : "+INDICACI1
   @ 6,0 SAY "                "+INDICACI2
   @ 7,0 SAY "Posologia     : "+POSOLOGI1
   @ 8,0 SAY "              : "+POSOLOGI2
   @ 9,0 SAY "TIPIFICACION  : "+TIPIFICAC
   ACTI WIND WINDVAC
   RETURN
