   PROC PROCVBC
   ************
   DEFI WIND WPROCBC FROM 9,00 TO 11,79;
                     TITLE " BUSCAR "  ;
                     DOUBLE NOFLOAT NOZOOM NOGROW SHADOW COLOR SCHEME 10
   ACTI WIND WPROCBC
   DO WHILE .T.
      STORE SPACE(20) TO WBUS
      @ 00,01 SAY "CLAVE :"
      @ 00,09 GET WBUS
      READ
      IF LASTKEY()=27
         EXIT
      ENDIF
      SEEK ALLTRIM(WBUS)
      IF FOUND()
         EXIT
      ELSE
         *STORE "NO REGISTRADO, VERIFIQUE" TO WTEXT
         *DO AVISO WITH WTEXT
      ENDIF
   ENDDO
   RELEASE WIND WPROCBC
   RETURN
