   DEFI WIND WINDVAC FROM 02,00 TO 12,79 ;
                     TITLE " VADEMECUM " ;
                     FOOTER " F4=Buscar, F5=Ord x Cod, F6=Ord Alf, F7=Ord x Tip, ESC=Salir ";
                     DOUBLE NOFLOAT NOZOOM NOGROW COLOR SCHEME 10
   DEFI WIND WINDVACIN FROM 13,00 TO 24,79 ;
                       TITLE " CARACTERISTICAS " ;
                       DOUBLE NOFLOAT NOZOOM NOGROW COLOR SCHEME 10
   ACTI WIND WINDVAC
   ON KEY LABEL F1
   ON KEY LABEL F2
   ON KEY LABEL F3
   ON KEY LABEL F4 DO PROCVBC
   ON KEY LABEL F5 DO PROCVOC
   ON KEY LABEL F6 DO PROCVOA
   ON KEY LABEL F7 DO PROCVOT
   ON KEY LABEL F8 DO PROCVOT
   ON KEY LABEL F9 DO PROCVOT
   ON KEY LABEL F10
   SELECT ALMART
   SET ORDER TO ALMART
   BROWSE FIELDS WCODIGO=SUBSTR(CODIGO,1,14):H="CODIGO", WDESCRI=SUBSTR(DESCRI,1,28):H="MEDICAMENTO",UNIMED:H="MED.EN INV",UNIEXI:H="EXISTENCIA",;
                 PRECIOA:H="PRECIO A" ,PRECIOB:H="PRECIO B" ,PRECIOC:H="PRECIO C" ,PRECIOD:H="PRECIO D" ,PRECIOE:H="PRECIO E";
                 FOR VADEMECUM="S";
                 NOAPPEND NODELETE NOMENU NOOPTIMIZE REST SAVE IN WINDOW WINDVAC WHEN INDICAVA()
   SET ORDER TO ALMART     
   ON KEY LABEL F1
   ON KEY LABEL F2
   ON KEY LABEL F3
   ON KEY LABEL F4
   ON KEY LABEL F5
   ON KEY LABEL F6
   ON KEY LABEL F7
   ON KEY LABEL F8
   ON KEY LABEL F9
   ON KEY LABEL F10
   RELEASE WIND WINDVAC
   RELEASE WIND WINDVACIN
   RETURN
