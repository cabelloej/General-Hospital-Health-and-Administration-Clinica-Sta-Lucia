*** BROWSE DEL SUBALMACEN
SELECT ALMLOT
DEFI WIND BRSER FROM LIBRART,CIBRART-3 TO LIBRART+15,CIBRART+73;
                TITLE " ARTICULOS SUBALMACEN :"+WATENCION ;
                FOOTER " ESC=Seleccionar ";
                DOUBLE NOFLOAT NOZOOM NOGROW SHADOW COLOR SCHEME 10
ACTI WIND BRSER
BROWSE FIELDS CODART:H="CODIGO ITEM", WDES=GETDES():H="DESCRIPCION",UNIDADES:H="EXISTENCIA";
              NOAPPEND NODELETE NOEDIT NOMENU NOOPTIMIZE REST SAVE IN WINDOW BRSER;
              FOR CODLOT=WATENCION
RELEASE WIND BRSER
RETURN
****
FUNC GETDES
***
SELECT ALMART
SET ORDER TO ALMART
SEEK ALMLOT.CODART
IF FOUND()
   STORE DESCRI TO WDES
ELSE
   STORE "NO REG. EN FICHERO MAESTRO" TO WDES
ENDIF
SELECT ALMLOT
RETURN WDES
