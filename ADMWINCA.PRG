SELECT SYSCAMA
DEFI WIND BRCAM FROM LIBRCAM,CIBRCAM TO LIBRCAM+10,CIBRCAM+60 ;
                TITLE " CAMAS " ;
                FOOTER " ESC = Seleccionar ";
                DOUBLE NOFLOAT NOZOOM NOGROW SHADOW COLOR SCHEME 10
ACTI WIND BRCAM
BROWSE FIELDS CAMA:H="CAMA", DESCRI:H="DESCRIPCION",WESTCAMA=FUNEST():H="ESTADO";
              NOAPPEND NODELETE NOEDIT NOMENU NOOPTIMIZE REST SAVE IN WINDOW BRCAM
RETURN
******
FUNC FUNEST
SELECT ADMADM
SET ORDER TO 4
SEEK SYSCAMA.CAMA
IF FOUND()
   STORE "OCUPADA" TO WESTCAMA
ELSE
   STORE "VACIA  " TO WESTCAMA
ENDIF
SELECT SYSCAMA
RETURN WESTCAMA




