do while .t.
   SELECT AFITITU
   @ 04,00 CLEAR
   @ 05,00 to 07,79 double color sche 10
   @ 05,35 SAY "< TITULAR >"
   @ 06,02 SAY "Cedula :"
   @ 06,10 GET WCEDTITU
   STORE "INGRESE LA CEDULA DEL TITULAR DEL CONTRATO" TO WTEXT
   DO MENSAJE WITH WTEXT
   READ
   IF LASTKEY()=27
      EXIT
   ENDIF
   IF WCEDTITU = SPACE(10)
      * DO BRAFI
      LOOP
   ENDIF
   SELECT AFITITU
   SEEK WCEDTITU
   IF .NOT. FOUND()
      STORE "NO EXISTE, VERIFIQUE" TO WTEXT
      DO AVISO WITH WTEXT
      LOOP
   ENDIF
   @ 06,20 SAY RTRIM(PAPELLIDO)+" "+RTRIM(SAPELLIDO)+", "+;
               RTRIM(PNOMBRE)+" "+RTRIM(SNOMBRE)
   *** LLAMADA AL BROWSE DE CARAGA FAMILIAR
   STORE 08 TO LIBRCAR
   STORE 00 TO CIBRCAR
   DO AFI0211B
   ***
ENDDO



